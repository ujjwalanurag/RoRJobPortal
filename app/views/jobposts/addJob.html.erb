<h1>Add Job</h1>
<%= form_for :jobposts, url: jobposts_path do |f| %>
    <p>
        <%= f.label :title %><br>
        <%= f.text_field(:title, {:class => 'form-control'}) %>
    </p>

    <p>
        <%= f.label :Description %><br>
        <%= f.text_area(:Description, {:class => 'form-control'}) %>
    </p>

    <p>
        <%= f.submit({:class => 'btn btn-primary'}) %>
    </p>
<% end %>