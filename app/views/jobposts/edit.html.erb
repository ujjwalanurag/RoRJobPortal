<h1>Edit Job</h1>

<%= form_for :jobpost, url: jobpost_path(@jobpost), method: :patch do |f| %>
    <p>
        <%= f.label :title %><br>
        <%= f.text_field(:title, {:class => 'form-control'}) %>
    </p>

    <p>
        <%= f.label :description %><br>
        <%= f.text_area(:description, {:class => 'form-control'}) %>
    </p>

    <p>
        <%= f.submit({:class => 'btn btn-primary'}) %>
    </p>
<% end %>