<div class="limiter">
   <div class="container" style="margin-top:60px;">
      <h1>Login</h1>
      <%= form_tag '/login' do %>
      <div class="input-group input-group-lg" style="margin-top:60px;">
         <span class="input-group-addon" id="sizing-addon1" style="margin-right:10px;"><%= label_tag :username %></span>
         <%= text_field_tag :username, "", class: 'form-control'%>
      </div>
      <br>
      <div class="input-group">
         <span class="input-group-addon" id="sizing-addon3" style="margin-right:14px;"><%= label_tag :password %></span>
         <%= password_field_tag :password, "", class: 'form-control'%>
      </div>
      <br>
      <br>
      <div>
         <div class="container-login100-form-btn m-t-17" style="display:inline-block">
            <%= submit_tag "Login", class: "btn btn-success" %>
         </div>
         <% end %>
         <div class="container-login100-form-btn m-t-17" style="display:inline-block">
            <%= button_to "Sign Up", '/register', method: :get, class: "btn btn-primary" %>
         </div>
      </div>
   </div>
</div>